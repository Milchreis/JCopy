<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.milchreis.jcopy.View">
  <children>
      <Pane minHeight="-Infinity" prefHeight="106.0" prefWidth="640.0" style="-fx-background-color: #2e2e2e;">
         <children>
            <ImageView layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo_small.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <HBox maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="204.0" prefWidth="630.0" VBox.vgrow="ALWAYS">
         <children>
            <ListView fx:id="elementList" maxWidth="1.7976931348623157E308" prefHeight="204.0" prefWidth="443.0" HBox.hgrow="ALWAYS" />
            <VBox>
               <children>
                  <Button fx:id="addElement" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAddElement" text="Add element">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="removeElement" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onRemoveElement" text="Remove element from list">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="removeAllElements" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onRemoveAllElements" text="Remove all elements from list" />
               </children>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <Button fx:id="selectDestination" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onSelectDestination" text="Select backup destination directory">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="startBackup" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onStartBackup" prefHeight="58.0" prefWidth="630.0" text="Start backup">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin>
      </Button>
      <ProgressBar fx:id="progressbar" maxWidth="1.7976931348623157E308" prefHeight="32.0" prefWidth="630.0" progress="0.0">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </ProgressBar>
  </children>
</VBox>
